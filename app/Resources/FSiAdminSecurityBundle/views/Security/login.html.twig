{% extends "ResuminAdminBundle::layout.html.twig" %}

{% block content %}
{% include "@ResuminAdmin/Partials/_header.html.twig" %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form class="form-horizontal" role="form" action="{{ path("fsi_admin_security_user_check") }}" method="post">
            {% if error %}
            <div class="alert alert-danger">{{ error|trans({}, 'FSiAdminSecurity') }}</div>
            {% endif %}
            {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
            {{ flashMessage|trans({}, 'FSiAdminSecurity') }}
            </div>
            {% endfor %}
            <div class="form-group">
                <label for="_username" class="col-sm-2 control-label">{{ 'admin.login.email.placeholder'|trans({}, 'FSiAdminSecurity') }}</label>
                <div class="col-sm-10">
                    <input type="text" name="_username" class="form-control" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <label for="_password" class="col-sm-2 control-label">{{ 'admin.login.password.placeholder'|trans({}, 'FSiAdminSecurity') }}</label>
                <div class="col-sm-10">
                    <input type="password" name="_password" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <button class="btn btn-primary" type="submit">{{ 'admin.login.button'|trans({}, 'FSiAdminSecurity') }}</button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-right">
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'admin.login.resetting_request'|trans({}, 'FSiAdminSecurity') }}</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock content %}
